<Window x:Class="AutoUpdaterTestWPF.DownloadUpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoUpdaterTestWPF"
        mc:Ignorable="d"
        Title="Software Update" Height="100" Width="500" ResizeMode="NoResize"
        Loaded="DownloadUpdateDialogLoad" Closing="DownloadUpdateDialog_FormClosing">
    <DockPanel Margin="4">
        <Image Source="Resources\Images\photo.png" Width="100" DockPanel.Dock="Left"/>
        <StackPanel>
            <DockPanel>
                <Label x:Name="labelInformation" Content="Downloading Update..."/>
                <Label x:Name="labelSize" HorizontalAlignment="Right"/>
            </DockPanel>
            <ProgressBar x:Name="progressBar" Height="30"/>
        </StackPanel>
    </DockPanel>
</Window>
