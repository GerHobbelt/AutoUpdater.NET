<Window x:Class="AutoUpdaterTestWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoUpdaterTestWPF"
        mc:Ignorable="d"
        Title="AutoUpdaterTestWPF" Width="190" Height="122" ResizeMode="NoResize">
    <StackPanel Margin="6">
        <Label x:Name="LabelVersion" Content="Current Version : 1.0.0.0" Margin="4" VerticalAlignment="Center"/>
        <Button x:Name="ButtonCheckForUpdate" Content="Check for Update" Margin="4" VerticalAlignment="Center"
                Height="30" Click="ButtonCheckForUpdate_Click"/>
    </StackPanel>
</Window>
